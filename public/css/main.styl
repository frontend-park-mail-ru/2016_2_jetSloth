@import url("https://fonts.googleapis.com/css?family=Architects+Daughter");
@import url('https://fonts.googleapis.com/css?family=Bungee+Inline');
@import url('https://fonts.googleapis.com/css?family=Slackey');
@import '../components/button/button.styl'
@import '../components/form/form.styl'
@import '../components/form/__input/__input.styl'

*
    margin: 0
    padding: 0
    box-sizing: border-box

    &:focus
        outline: none

body
    background: #f1c40f
    font-family: 'Roboto', sans-serif
    font-weight: 400

.container
    margin: 0 50px
    min-width: 400px

.content
    display: flex
    position: relative

.js-main, .js-signup
    justify-content: center
    align-items: center

.js-signin
    flex-direction: column
    align-content: space-between
    align-items: center

.content__background-img
    animation: down-up infinite ease-in-out alternate 1s
    position: relative
    top: 100px

.menu
    z-index: 1
    position: absolute
    bottom: 50px

.close
    position: absolute
    color: #11355e
    top: 30px
    right: 30px

.loader
	width: 100%
	height: 8px
	position: relative
	overflow: hidden;

.loader div
	position: absolute
	height: 100%
	left: 50%

.loader__green
	background: #27ae60

.loader__red
	background: #c0392b

.loader__blue
	background: #2980b9

.loader__violet
	background: #51249a

.wave1
	animation: stretch 2.8s ease 0s

.wave2
	animation: stretch 2.8s ease .4s

.wave3
	animation: stretch 2.8s ease .8s

.wave4
	animation: stretch 2.8s ease 1.2s


@-webkit-keyframes 'down-up'
    0%
        padding: 0 0 0 0
    100%
        padding: 10px 0 0 0


@-webkit-keyframes 'stretch'
    0%
       padding: 0 0 0 0
       left: 50%
       z-index: 4

    25%
       z-index: 3

    50%
       padding: 0 50% 0 50%
       left: 0
       z-index: 2

    100%
       padding: 0 50% 0 50%
       left: 0
       z-index: 1
