.btn
    position: relative
    border: none
    text-align: center
    user-select: none
    display: inline-block
    width: 180px
    padding: 10px 0
    margin: 20px 0
    border-radius: 10px
    font-family: 'Bungee Inline', cursive
    font-size: 30px
    text-transform: uppercase
    box-shadow: 0 0 10px rgba(0,0,0,0.8)
    color: #FFF

.btn:disabled
    opacity: 0.8

.btn_play
    background: #470886

.btn_submit
    background: #4a9c17

.btn_signup
    background: #124880

.btn_reset
    background: #c22f2f

.btn_with_shadow:after
    content: ""
    display: block
    position: absolute
    width: 100%
    height: 15%
    border-radius: 50%
    background-color: #303b53
    opacity: 0.4
    bottom: -100px
